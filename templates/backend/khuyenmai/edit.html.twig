{# Kế thừa layout backend #}
{% extends "backend/layouts/layout.html.twig" %}

{# Nội dung trong block title #}
{% block title %}
Sửa Khuyến mãi
{% endblock %}
{# End Nội dung trong block title #}

{# Nội dung trong block headline #}
{% block headline %}
Sửa Khuyến mãi
{% endblock %}
{# End Nội dung trong block headline #}

{# Nội dung trong block content #}
{% block content %}
<form name="frmKhuyenMai" id="frmKhuyenMai" method="post" action="/mobile-shop/backend/khuyenmai/edit.php?km_ma={{ khuyenmai.km_ma }}">
    <div class="form-group">
        <label for="km_ma">Mã Khuyến mãi</label>
        <input type="text" class="form-control" id="km_ma" name="km_ma" placeholder="Mã Khuyến mãi" readonly value="{{ khuyenmai.km_ma }}">
        <small id="km_maHelp" class="form-text text-muted">Mã Khuyến mãi không được hiệu chỉnh.</small>
    </div>
    <div class="form-group">
        <label for="km_ten">Tên Khuyến mãi</label>
        <input type="text" class="form-control" id="km_ten" name="km_ten" placeholder="Tên Khuyến mãi" value="{{ khuyenmai.km_ten }}">
    </div>
    <div class="form-group">
        <label for="km_noidung">Nội dung Khuyến mãi</label>
        <input type="text" class="form-control" id="km_noidung" name="km_noidung" placeholder="Nội dung Khuyến mãi" value="{{ khuyenmai.km_noidung }}">
    </div>
    <div class="form-group">
        <label for="km_tungay">Nội dung Khuyến mãi</label>
        <input type="text" class="form-control" id="km_tungay" name="km_tungay" placeholder="Từ ngày" value="{{ khuyenmai.km_tungay }}">
    </div>
    <div class="form-group">
        <label for="km_denngay">Nội dung Khuyến mãi</label>
        <input type="text" class="form-control" id="km_denngay" name="km_denngay" placeholder="Đến ngày" value="{{ khuyenmai.km_denngay }}">
    </div>
    <button class="btn btn-primary" name="btnCapNhat">Cập nhật</button>
</form>
{% endblock %}
{# End Nội dung trong block content #}